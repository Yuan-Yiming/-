page {
  background: #f6f6f6;
}
.item-wrap {
  margin-bottom: 10px;
  box-shadow: 0 2px 5px rgba(200, 200, 200, 0.3);
}
.item-wrap .item {
  overflow: hidden;
  margin-bottom: 2px;
  height: 50px;
  line-height: 50px;
  font-size: 16px;
  padding: 0 16px;
  background: #fff;
}
.item-wrap .item:active {
  background: #f6f6f6;
}
.item-wrap .item .item-text {
  float: left;
  color: #262626;
}
.item-wrap .item .item-content {
  float: right;
  color: #999;
  max-width: 525rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item-wrap .item .item-content.money-input {
  display: inline-block;
  height: 50px;
  line-height: 50px;
  text-align: right;
  font-size: 16px;
  padding-right: 5px;
  max-width: 525rpx;
}
/* 保存按钮 */
.save-btn {
  width: 80%;
  height: 40px;
  line-height: 40px;
  background: #41c5ad;
  border-radius: 4px;
  color: #fff;
  font-size: 18px;
  margin-top: 20px;
}
.save-btn:active {
  /* background: rgba(65,197,173,0.5); */
  opacity: 0.5;
}