/* 金额输入区域 */
.input-area {
    /* width: 100%; */
    position: relative;
}
.input-area .input-money {
    /* overflow: hidden; */
}
.input-area .input-money input {
    /* float: left; */
    color: #353535;
    font-size: 30px;
    font-weight: bold;
    margin: 0 auto;
    /* margin-left: 20px; */
    width: calc(100% - 40px);
    box-sizing: border-box;
    padding: 5px;
    padding-left: 40px;
    height: 50px;
    line-height: 50px;
    border-bottom: 1px solid #999;
    margin-bottom: 5px;
    position: relative;
}
.input-area .input-money input::before {
    font-family: 'iconfont';
    content: '\e62d';
    position: absolute;
    top: 0;
    left: 0;
    width: 40px;
    height: 50px;
    text-align: center;
    line-height: 50px;
    font-size: 40px;
    font-weight: 500;
    color: #353535;
}
