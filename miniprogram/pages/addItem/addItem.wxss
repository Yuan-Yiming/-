/* 添加备注 */
.input-area .select-btn {
    overflow: hidden;
    width: 100%;
    height: 30px;
    line-height: 30px;
    padding: 0 20px;
    font-size: 16px;
    text-align: left;
}
.input-area .select-btn .date-picker, .input-area .select-btn .add-remark {
    float: left;
    min-width: 10%;
}
.input-area .select-btn .icon {
    margin-right: 10px;
    color: #666;
}
.input-area .select-btn .icon::before {
    display: inline-block;
    height: 100%;
    font-size: 16px;
    color: #999;
    margin-right: 5px;
}
/* 图表区域 */
.cate-area {
    width: 100%;
    /* height: 30px; */
}
.cate-area .cate-item {
    padding-top: 10px;
    float: left;
    width: 20%;
    text-align: center;
    /* height: 60px; */
    /* border: 1px solid green; */
    box-sizing: border-box;
}
.cate-area .cate-item .cate-icon {
    display: inline-block;
    width: 50px;
    height: 50px;
    line-height: 50px;
    border-radius: 50%;
    background: #eee;
    /* position: absolute; */
}
.cate-area .cate-item .cate-icon.is-selected-icon {
    background: #41C5AD;
}
.cate-area .cate-item .cate-icon::before {
    font-family: 'iconfont';
    font-size: 26px;
    color: #353535;
}
.cate-area .cate-item .cate-icon.is-selected-icon::before {
    color: #fff;
}
.cate-area .cate-item .cate-name {
    font-size: 14px;
    display: inline-block;
    width: 100%;
    height: 20px;
    line-height: 20px;
}
