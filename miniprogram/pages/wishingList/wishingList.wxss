.container {
  /* background: #f6f6f6; */
  width: 100%;
  padding-top: 10px;
  /* padding-top: 126px; */
}
.header-wrap {
  transition: max-height 0.5s;
  max-height: 300px;
  overflow: hidden;
}
.header-wrap.is-closed {
  max-height: 0px;
}
.header {
    /* position: fixed;
    top: 10px;
    left: 10px; */
    margin: 10px auto;
    margin-top: 0;
    width: calc(100% - 50px);
    border-radius: 0 0 15px 15px;
    background: rgba(65,197,173,0.7);
    color: #fff;
    padding: 15px;
    padding-top: 40px;
    box-sizing: border;
    font-size: 15px;
    line-height: 24px;
    box-shadow: 0 4px 10px rgba(100,100,100,.3);
    position: relative; 
}
.header .draw-up-btn {
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  position: absolute;
  bottom: 10px;
  right: 10px;
  animation: closeIt 0.3s linear infinite alternate;
}
.header .draw-up-btn::before {
  font-size: 20px;
  color: #999;
}
@keyframes closeIt {
  0% {
    bottom: 10px;
  }
  100% {
    bottom: 20px;
  }
}
.header .header-cap {
  height: 30px;
  position: absolute;
  width: calc(100%);
  background-color: rgba(65,197,173);
  box-shadow: 0 2px 10px rgba(100,100,100,.8);
  top: 0;
  left: 0;
  transform: skewX(15deg);
  transform-origin: 0 0;
}
.add-btn {
  width: calc(100% - 20px);
  height: 60px;
  line-height: 60px;
  border: 1px dashed;
  color: #aaa;
  border-radius: 2px;
  /* box-shadow: 0 2px 10px rgba(100,100,100,.3); */
}
.add-btn::before {
  font-size: 40px;
}
.adding-text {
  text-align: canter;
  line-height: 30px;
  color: #aaa;
  font-size: 14px;
}