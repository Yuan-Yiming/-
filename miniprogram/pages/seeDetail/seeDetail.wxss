/* miniprogram/pages/seeDetail/seeDetail.wxss */
page {
  background: #f6f6f6;
}
.detail-card {
    width: 80%;
    margin: 60px auto;
    background: #fff;
    min-height: 300px;
    border-radius: 5px;
    box-sizing: border-box;
    box-shadow: 0 3px 10px #999; 
    border: 1px solild #eee;
    overflow: hidden;
}
.detail-card .detail-header {
    height: 60px;
    width: 100%;
    overflow: hidden;
    background: rgba(65,197,173, 0.8);
}
.detail-card .detail-header>view {
    height: 60px;
    line-height: 60px;
    width: 50%;
    font-size: 20px;
    box-sizing: border-box;
    color: #353535;
}
.detail-card .detail-header .detail-cate {
    float: left;
    padding-left: 15px;
}
.detail-card .detail-header .detail-money {
    text-align: right;
    float: right;
    padding-right: 15px;
}
.detail-card .detail-content {
    width: 100%;
}
.detail-card .detail-content>view {
    width: 100%;
    height: 50px;
    line-height: 50px;
    border-bottom: 1px solid #eee;
    position: relative;
}
.detail-card .detail-content>view>text {
    position: absolute;
    display: inline-block;
    height: 50px;
    box-sizing: border-box;
    font-size: 16px;
    color: #555;
}
.detail-card .detail-content>view>text:first-child {
    padding-left: 15px;
    width: 30%;
}
.detail-card .detail-content>view>text:last-child {
    width: 70%;
    text-align: right;
    padding-right: 15px;
    right: 0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.detail-card .detail-footer {
    width: 100%;
    overflow: hidden;
}
.detail-card .detail-footer button {
    height: 50px;
    line-height: 50px;
    width: 50%;
    font-size: 18px;
    color: #353535;
    border-radius: 0;
}
.detail-card .detail-footer button:first-child {
    float: left;
    border-right: 1px solid #eee;
}
.detail-card .detail-footer button:last-child {
    float: right;
}