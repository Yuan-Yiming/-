.header {
    height: 70px;
    width: 100%;
    background: #41C5AD;
    color: #fff;
}
.header .money {
    height: 40px;
    line-height: 50px;
    /* background: red; */
}
.header .money text {
    display: inline-block;
    width: 33.3%;
    text-align: center;
    font-size: 18px;
}
.header .type {
    height: 30px;
    line-height: 20px;
    /* background: blue; */
}
.header .type text {
    display: inline-block;
    width: 33.3%;
    text-align: center;
    font-size: 14px;
}
.selector {
    width: 100%;
    text-align: center;
    padding: 0 15px;
    box-sizing: border-box;
}
.selector .btn {
    width: 66px;
    height: 30px;
    line-height: 30px;
    border-radius: 15px;
    border: 1px solid #666;
    font-size: 14px;
    margin: 5px 2px;
    float: left;
}
