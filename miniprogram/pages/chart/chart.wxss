.container {
  background: #f6f6f6;
  /* padding-top: 126px; */
}
.header {
    /* position: fixed;
    top: 10px;
    left: 10px; */
    margin: 10px auto;
    width: calc(100% - 20px);
    border-radius: 4px;
    background: #41C5AD;
    color: #fff;
    padding: 8px 0;
    box-shadow: 0 2px 10px rgba(100,100,100,.5);
}
.header .selector {
    /* width: 100%; */
    text-align: center;
    padding: 0 15px;
    box-sizing: border-box;
    overflow: hidden;
    margin-bottom: 8px;
}
.header .selector .btn {
  width: 76px;
  height: 30px;
  line-height: 30px;
  border-radius: 15px;
  /* border: 1px solid #666; */
  font-size: 14px;
  margin: 5px 2px;
  float: right;
}
.header .selector .btn.selected {
  background-color: #fff;
  color: #41C5AD;
}
.header .selector .date-picker {
  float: left;
  font-size: 16px;
  width: 90px;
  height: 30px;
  line-height: 30px;
  /* border: 1px solid #666; */
  border-radius: 15px;
  margin: 5px 2px;
}
.header .selector .month {
  font-family: 'iconfont';
}
.header .selector .month::after {
  content: ' \e605';
  font-size: 12px;
}
.header .money {
  height: 40px;
  line-height: 40px;
  /* background: red; */
}
.header .money text {
  display: inline-block;
  width: 33.3%;
  text-align: center;
  font-size: 18px;
}
.header .type {
  height: 30px;
  line-height: 30px;
  /* background: blue; */
}
.header .type text {
  display: inline-block;
  width: 33.3%;
  text-align: center;
  font-size: 14px;
}

/* 图标区域 */
.chart-line {
  width: calc(100% - 20px);
  height: 270px;
  /* border: 1px solid red; */
  background-color: #fff;
  box-shadow: 0 0 10px rgba(100,100,100,.2);
  margin-bottom: 10px;
  padding-top: 10px;
}
.chart-wrapper .chart-title {
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  border-left: 4px solid #41C5AD;
  margin-left: 10px;
  margin-bottom: 10px;
  padding-left: 5px;
  color: #999;
}

