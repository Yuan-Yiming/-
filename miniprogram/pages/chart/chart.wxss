/* 条形图 */
.bar-wrap {
  width: calc(100% - 20px);
  margin: 10px auto;
}
.bar-wrap .bar-title-wrap {
  padding: 10px 0;
  background-color: #fff;
}
.bar-wrap .bar-title {
  height: 20px;
  line-height: 20px;
  margin-left: 10px;
  border-left: 4px solid #41C5AD;
  padding-left: 5px;
  font-size: 14px;
  color: #999;
}
.bar-wrap .bar-item {
  /* width: 100%; */
  overflow: hidden;
  /* height: 40px; */
  margin-bottom: 2px;
  background-color: #fff;
  /* box-shadow: 0 0 10px rgba(100,100,100,.2); */
}
/* 图标 */
.bar-wrap .bar-item .item-icon {
  float: left;
  width: 60px;
  height: 60px;
  line-height: 60px;
  /* background: rgba(255, 0, 0, 0.1) */
  position: relative;
}
.bar-wrap .bar-item .item-icon .cate-icon {
  position: absolute;
  top: 10px;
  left: 10px;
  display: inline-block;
  width: 40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 50%;
  background: #41C5AD;
    /* position: absolute; */
}
.bar-wrap .bar-item .item-icon .cate-icon::before {
    font-family: 'iconfont';
    font-size: 26px;
    color: #fff;
}
/* 百分条 */
.bar-wrap .bar-item .item-percent {
  float: left;
  height: 60px;
  width: calc(100% - 160px);
  /* width: 30%; */
  /* background: rgba(0,255,0,.3); */
  box-sizing: border-box;
  padding: 5px 0;
}
.bar-wrap .bar-item .item-percent .item-name {
  font-size: 16px;
  color: #262626;
  line-height: 30px;
}
.bar-wrap .bar-item .item-percent .precent-line {
  line-height: 20px;
  height: 8px;
  border-radius: 4px;
  margin-top: 6px;
  background-color: #41C5AD;
}
/* 总金额 */
.bar-wrap .bar-item .item-total {
  padding: 5px 10px 5px 0;
  float: right;
  /* width: 60px; */
  height: 60px;
  text-align: right;
  overflow: nowrap;
  box-sizing: border-box;
}
.bar-wrap .bar-item .item-total .money {
  color: rgba(255,0,0,0.4);
  font-size: 20px;
  font-weight: bold;
  line-height: 30px;
}
.bar-wrap .bar-item .item-total .number {
  color: #aaa;
  font-size: 12px;
  line-height: 20px;
}