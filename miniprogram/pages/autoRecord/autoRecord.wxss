/* 定期记录列表 */
.container .auto-record-list {

}
.container .auto-record-item {
  font-size: 18px;
  color: #262626;
  box-sizing: border-box;
  padding: 5px 30rpx;
  width: 750rpx;
  /* height: 80px; */
  line-height: 30px;
  background-color: #fff;
  margin-top: 5px;
  box-shadow: 0 2px 6px rgba(150,150,150,0.1);
}
.container .auto-record-item .line-2 {
  overflow: hidden;
  font-size: 14px;
  color: #999;
}
.container .auto-record-item .line-2 .record-gap {
  float: left;
}
.container .auto-record-item .line-2 .start-date {
  float: right;
  
}
/* 添加按钮 */
.container .add-btn {
  margin-top: 20px;
  width: calc(100% - 40px);
  height: 50px;
  line-height: 50px;
  /* border: 1px dashed; */
  background-color: rgba(65,197,173,0.8);
  border-radius: 4px;
  /* box-shadow: 0 2px 10px rgba(100,100,100,.3); */
}
.container .add-btn::before {
  font-size: 30px;
  color: #fff;
}